// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "Bonk",
    "build": {
      "command": "cargo",
      "args": ["build"]
    },
    "env": {
      "VULKAN_SDK": "/Users/kane/VulkanSDK/1.3.296.0",
      "DYLD_LIBRARY_PATH": "/Users/kane/VulkanSDK/1.3.296.0/macOS/lib"
    },
    "program": "$ZED_WORKTREE_ROOT/target/debug/bonk",
    "args": ["--project-path", "$ZED_WORKTREE_ROOT/demo_platformer"],
    // sourceLanguages is required for CodeLLDB (not GDB) when using Rust
    "sourceLanguages": ["rust"],
    "request": "launch",
    "adapter": "CodeLLDB",
    "initCommands": ["process handle SIGTRAP --pass false --stop true --notify true"]
  }
]
